{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "paths": {
      "@domain/*": ["../domain/src/*"],
      "@ports/*": ["../ports/src/*"],
      "@lib/*": ["../lib/src/*"]
    }
  },
  "references": [
    { "path": "../domain" },
    { "path": "../ports" },
    { "path": "../lib" }
  ],
  "include": ["src", "test"]
}
